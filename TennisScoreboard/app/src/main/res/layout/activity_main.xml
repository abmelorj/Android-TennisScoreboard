<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Line 1 - Headers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Header Score -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Space upper Score -->
            <TextView
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <!-- Score -->
            <TextView
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score" />
        </LinearLayout>

        <!-- Header Player -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Space upper Player -->
            <TextView
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <!-- Player -->
            <TextView
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Player" />

        </LinearLayout>

        <!-- Header Sets -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <!-- Set -->
            <TextView
                style="@style/HeaderText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Set" />

            <!-- Header - Set Numbers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!-- 1 -->
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1" />
                <!-- 2 -->
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2" />
                <!-- 3 -->
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3" />
                <!-- 4 -->
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4" />
                <!-- 5 -->
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Line 2 - Player A -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!-- Player A - Score -->
        <TextView
            android:id="@+id/player_a_score"
            style="@style/ScoreText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="00" />
        <!-- Player A - Button -->
        <Button
            android:id="@+id/player_a_button"
            style="@style/ScoreButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="A"
            android:onClick="addPointPlayerA"/>
        <!-- PLayer A - Sets -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <!-- Player A - Set 1 -->
            <TextView
                android:id="@+id/player_a_set_1"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player A - Set 2 -->
            <TextView
                android:id="@+id/player_a_set_2"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player A - Set 3 -->
            <TextView
                android:id="@+id/player_a_set_3"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player A - Set 4 -->
            <TextView
                android:id="@+id/player_a_set_4"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player A - Set 5 -->
            <TextView
                android:id="@+id/player_a_set_5"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>

    <!-- Line 3 - Player B -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Player B - Score -->
        <TextView
            android:id="@+id/player_b_score"
            style="@style/ScoreText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="00" />
        <!-- Player B - Button -->
        <Button
            android:id="@+id/player_b_button"
            style="@style/ScoreButtonText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="B"
            android:onClick="addPointPlayerB"/>
        <!-- PLayer B - Sets -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <!-- Player B - Set 1 -->
            <TextView
                android:id="@+id/player_b_set_1"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player B - Set 2 -->
            <TextView
                android:id="@+id/player_b_set_2"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player B - Set 3 -->
            <TextView
                android:id="@+id/player_b_set_3"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player B - Set 4 -->
            <TextView
                android:id="@+id/player_b_set_4"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />
            <!-- Player B - Set 5 -->
            <TextView
                android:id="@+id/player_b_set_5"
                style="@style/ScoreText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>